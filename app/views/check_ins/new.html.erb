<div class="w-100">
  <div class="d-flex justify-content-between align-items-start pt-5 mx-5">
    <div>
      <h1>New Check-In</h1>
    </div>
    <button class="btn btn-small btn-primary">
      <%= link_to "Back to Listing", check_ins_path, class: "text-white" %>
    </button>
  </div>

  <div class="m-5">
    <%= form_for @check_in do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group mb-3">
        <%= form.label "Happiness (Role)" %>
        <%= form.number_field :role_happiness, class: "form-control" %>
        <small class="form-text text-muted">On a scale of 1-5, rank your happiness with your role in the company.</small>
      </div>
      <div class="form-group mb-3">
        <%= form.label "Happiness (Company)" %>
        <%= form.number_field :company_happiness, class: "form-control" %>
        <small class="form-text text-muted">On a scale of 1-5, rank your happiness with the company in general.</small>
      </div>
      <div class="form-group mb-3">
        <%= form.label :comment %>
        <%= form.text_area :comment, class: "form-control" %>
      </div>
      <div class="form-group mb-3">
        <%= form.label :emotion %>
        <%= form.text_field :emotion, class: "form-control" %>
        <small class="form-text text-muted">How are you feeling? Need inspiration? Check out <a href="https://nvctraining.com/media/NVCA/learning-tools/feelings-list.pdf" target="_blank">this feelings list</a>.</small>
      </div>

      <%= form.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

